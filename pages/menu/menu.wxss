/* pages/menu/menu.wxss */
/*整个页面设置为弹性盒*/
page{
  height: 100%;
  display: flex;
  flex-direction: column;
}
/* 头部样式*/
.menu-header{
  width: 750rpx;
  height: 50px;
}
.menu-header-left{
  width: 300rpx;
  height: 50px;
  line-height: 50px;
  font-size: 14px;
  float: left;
  display: flex;
}
.positionInfo{
  width: 250rpx;
  height: 50px;
  display: flex;
  flex-direction: column;
}
.positionInfo>text{
  height: 20px;
  float: left;
}
.positionInfo>text:first-child{
  font-size: 12px;
  line-height: 24px;
}
.positionInfo>text:last-child{
  font-size: 10px;
  line-height: 20px;
}
.positionImg{
  width: 30px;
  height: 30px;
  float: left;
  margin: 7px 10px;
}
.menu-header-right{
  width: 300rpx;
  height: 50px;
  line-height: 50px;
  float: right;
}
.sendWay{
  border: 1px solid #dedede;
  width: 160rpx;
  height: 30px;
  line-height: 30px;
  margin: 10px;
  font-size: 12px;
  border-radius: 20px;
  float: right;
}
.send{
  width: 50%;
  text-align: center;
}
.self{
  width: 40%;
  height: 26px;
  line-height: 26px;
  margin: 2px;
  float: left;
  background: lightblue;
  border-radius: 13px;
}
.express{
  float: right;
}
/* 轮播图样式*/
.menu-swiper{
  width: 750rpx;
  height: 100px;
}
swiper-item{
  width: 100%;
  height: 100%;
}
.slide-image{
  width:750rpx;
  height: 100%;
}

.menu-content{
  flex:1;
  display: flex;
  height: 100%;
}

.menu-aside{
  width: 200rpx;
  height: 100%;
  overflow-x: hidden;
  background: whitesmoke;
}
.aside-item{
  height: 30px;
  line-height: 30px;
  text-align: center;
  font-size: 12px;
}
.aside-item.active{
  background: #fff;
}

.menu-main{
  width: 550rpx;
  height: 100%;
  padding: 5px;
  box-sizing: border-box;
 
}
.main-item{
  height: 60px;
}
.menu-image{
  width: 100rpx;
  height: 100rpx;
  background: honeydew;
  margin: 5px;
  float: left;
}
.wareImg{
  width: 100rpx;
  height: 100rpx;
  float: left;
}
.menu-right{
  float: left;
  width: 400rpx;
  height: 118rpx;
  font-size: 10px;
  overflow: hidden;
}
.menu-right-top{
  height: 84rpx;
}
.title{
  font-weight: bold;
  height: 30rpx;
  line-height: 30rpx;
}
.eName{
  height: 20rpx;
  line-height: 30rpx;
  color: #999;
}
.size{
  height: 20rpx;
  line-height: 40rpx;
  font-size: 8px;
}
.menu-right-bottom{
  height: 30rpx;
  line-height: 30rpx;
}
.price{
  float: left;
  font-weight: bold;
}
.increase{
  height: 12px;
  width: 12px;
  float: right;
  text-align: center;
  line-height: 12px;
  font-size: 14px;
  background: lightblue;
  color: #fff;
  border-radius: 50%;
}

/* 模态框样式 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0,0,1);
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog {
  width: 680rpx;
  height: 960rpx;
  overflow: hidden;
  position: fixed;
  top: 60rpx;
  left:15px;
  z-index: 9999;
  background: #fff;
  /* margin:0 35rpx; */
  border-radius: 28rpx;
  display: flex;
  flex-direction: column;
}
.modal-title {
  width: 680rpx;
  height: 300rpx;
  position: relative;
}
.modal-img{
  width:680rpx;
  height:300rpx;
  float: left;
}
.cancelBtn{
  width: 18px;
  height: 18px;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0);
  border: 1px solid #f1f1f1;
  color: #fff;
  font-size: 14px;
  text-align: center;
  line-height: 18px;
  position: absolute;
  right: 5px;
  top: 5px;
}
.modal-content{
  height: 500rpx;
}
.modal-btns {
  display: flex;
  flex-direction: column;
  background: #fff;
  margin: 5px;
}
.btn{
  height: 30px;
  line-height: 30px;
  display: flex;
  font-size: 10px;
}
.choose{
  width: 30px;
}
.chooseBtn{
  width: 40px;
  height: 18px;
  text-align: center;
  line-height: 18px;
  background: #f1f1f1;
  border-radius: 12px;
  margin: 5px;
  font-size: 10px;
}
.chooseBtn.active{
  border: 1px solid #dedede;
  background: #fff;
}
.masterSay{
  border-bottom: 1px solid #dedede;
  border-top: 1px solid #dedede;
  font-size: 8px;
  padding: 10px 0;
  margin: 5px;
}
.top{
  height: 20px;
  line-height: 20px;
  font-size: 12px;
}
.bottom{
  display: flex;
}
.avatar{
  width: 30px;
  height: 30px;
  border-radius: 50%;
  background: lightcoral;
}
.right{
  margin-left: 5px;
}
.info{
  margin: 2px;
}
.discription{
  height: 80px;
  margin: 5px;
}
.disTitle{
  font-size: 10px;
  height: 20px;
  line-height: 20px;
}
.dis{
  height: 15px;
  line-height: 15px;
  font-size: 8px;
}
.modal-footer {
  width: 680rpx;
  display: flex;
  flex-direction: column;
  height: 180rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  background: #fff;
  position: absolute;
  bottom: 0;
}
.footer-top{
  height: 50%;
  display: flex;
  flex-direction: column;
  margin-left: 5px;
}
.fleft{
  float: left;
}
.orderAction{
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  float: right;
  text-align: center;
}
.orderInfo{
  height: 30rpx;
  line-height: 30rpx;
  font-size: 8px;
}
.footer-bottom{
  height: 90rpx;
  display: flex;
}
.footer{
  width:50%;
  height: 100%;
}
.footer text{
  width: 300rpx;
  height: 70rpx;
  font-size: 12px;
  text-align: center;
  line-height: 70rpx;
  margin: 5px 10px;
  color: #fff;
  float: left;
  border-radius: 3px;
}
.reduce{
  background: #fff;
  color: lightblue;
  border: 1px solid lightblue;
}
.add{
  background: lightblue;
  color: #fff;
}
.sendBar{
  background: orange;
}
.addBar{
  background: lightblue;
}
.fright{
  width: 30px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  margin: 3px;
  border-radius: 50%;
}