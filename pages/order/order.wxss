/* pages/order/order.wxss */
page{
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #f1f1f1;
}
.order{
  background: #fff;
}
.order-header{
  height: 50px;
  line-height: 50px;
  font-size: 12px;
  margin: 5px;
  border-bottom: 1px solid #ccc;
}
.self-order{
  float: left;
}
.order-status{
  float: right;
}

.order-item{
  height: 100px;
  margin:0 5px; 
  background: #fff;
}
.order-top{
  height: 30px;
  line-height: 30px;
  font-size: 12px;
}
.order-address{
  float: left;
  font-weight: bold;
}
.order-date{
  float: right;
}
.order-middle-name{
  font-size: 10px;
}
.order-bottom-price{
  font-size: 14px;
  font-weight: bold;
  height: 40px;
  line-height: 40px;
}